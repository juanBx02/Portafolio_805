@model IEnumerable<Portafolio_805.Models.Empleado>;

@{
    ViewData["Title"]="Lista de Empleados";
}
<div class="Col-12 mb-4">
    <a asp-controller="Home" asp-action="Crear" type="buttom" class="btn btn-primary">Agregar Empleado</a>
</div>


@if (Model.Count()>0)
{
    <table class="table table-bordered" width="90%">
      <thead>
        <tr>
          <th scope="col">Acciones</th>
          <th scope="col">@Html.DisplayNameFor(m=>m.Cedula)</th>
          <th scope="col">Nombre Completo</th>
          <th scope="col">@Html.DisplayNameFor(m=>m.Telefono)</th>
          <th scope="col">@Html.DisplayNameFor(m=>m.Email)</th>
          <th scope="col">@Html.DisplayNameFor(m=>m.Estado)</th>
        </tr>
      </thead>
      <tbody>
          @foreach(var item in Model)
        {
               <tr>
                  <td>
                      <div class="btn-group" role="group" aria-label="Basic example col-12">
                          <a asp-controller="Home" asp-action="Eliminar" asp-route-id="@item.Id" type="button" class="btn btn-danger col-6"><i class="bi bi-trash"></i></a>
                          <a asp-controller="Home" asp-action="Editar" asp-route-id="@item.Id" type="button" class="btn btn-success col-6 "><i class="bi bi-pencil-square"></i></a>
                        </div>
                  </td>
                  <td>@Html.DisplayFor(m=>item.Cedula)</td>
                  <td>@Html.DisplayFor(m=>item.NombreC)</td>
                  <td>@Html.DisplayFor(m=>item.Telefono)</td>
                  <td>@Html.DisplayFor(m=>item.Email)</td>
                    <td>@if (item.Estado == 1)
                        {
                            <button type="button" class="btn btn-success col-12">Activo</button>
                        }
                        else
                        {
                            <button type="button" class="btn btn-danger col-12">Inactivo</button>
                        }

                    </td>
                    
                </tr> 
        }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-danger">No Tienes elementos en la base de datos</div>
}


